<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="amirahmed.com.opensourcelibrary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GridCoordinatorLayout.CoordinatorActivity"
            android:label="Co">
        </activity>
        <activity android:name=".GridCoordinatorLayout.DetailedCardActivity"
            android:label="IA">
        </activity>
        <activity
            android:name=".RecyclerListView.IntroActivity"
            android:label="IAA">
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="Open Source Library">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>